set -e
set -u

logfile="/var/log/think-dock.log"

# Find the user who is currently logged in on the primary screen.
user="$(who -u | grep -F '(:0)' | head -n 1 | awk '{print $1}')"

logger -t think-dock -- "Using user $user."

case "$1" in
	on)
		setto=on
		;;
	off)
		setto=off
		;;
esac

date >> "$logfile"

su -c "DISPLAY=:0.0 bash -x /usr/bin/think-dock $setto" --login "$user" >> "$logfile" 2>&1 &

disown
